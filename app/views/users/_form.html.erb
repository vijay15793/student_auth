
<table border="1" bgcolor=#AAFFAA>
		<tr>
			<th>Name</th>
			<td><%= f.text_field(:name)%></td>
		</tr>
		<tr>
			<th>Username</th>
			<td><%= f.text_field(:username)%></td>
		</tr>
		
		<tr>
			<th>Class</th>
			<td><%= f.text_field(:std)%></td>
		</tr>
		<tr>
			<th>Section</th>
			<td><%= f.text_field(:section)%></td>
		</tr>
		<tr>
			<th>Email Id</th>
			<td><%= f.text_field(:email)%></td>
		</tr>
		<tr>
			<th>Mobile No.</th>
			<td><%= f.text_field(:mobile)%></td>
		</tr>
		<tr>
		<% if can? :manage, User %>
            <th>Status</th>
           <td><%=f.text_field(:deleted_flag)%></td>
           <%end%>
         </tr>
         <% if not current_user %>
		<tr>
			<th>Password</th>
			<td><%= f.password_field(:password)%></td>
		</tr>
		
		<tr>
			<th>Confirm Password</th>
			<td><%= f.password_field(:password_confirmation)%></td>
		</tr>
		 <%end%>
		 
		</table>
		<% if can? :manage, User %>
		<div>
		<% Role.all.each do |role| %>
        <%= check_box_tag "user[role_ids][]", role.id, @user.role_ids.include?(role.id) %>
        <%= role.name %><br />
        <% end %>
		<div>
		<% end %>
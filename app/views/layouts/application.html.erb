<!DOCTYPE html>
<html>
<head>
  <title>StudentAuth</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
 <div align="left">
<%= link_to("HOME", {:controller => 'users', :action => 'index'} )%>



</div>

<% [:notice, :error, :alert, :success].each do |level| %>
  <% unless flash[level].blank? %>
    <div class="<%= flash_class(level) %>">
      <%= content_tag :span, flash[level] %>
    </div>
  <% end %>
<% end %>

<h1>School Application</h1>

<% if user_signed_in? %>
  <p>Signed in as: <%= current_user.email %></p>
  <p><%= link_to 'Log Out', destroy_user_session_path, :method => 'delete', :confirm => 'Are you sure?' %></p>
<% else %>
  <p><%= link_to 'Log In', new_user_session_path %></p>
<% end %>

<%= yield %>

</body>
</html>
